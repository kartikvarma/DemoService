<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app version="2.5"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" >

    <servlet>
        <servlet-name>DemoService</servlet-name>
        <servlet-class>org.kartik.kbp.demo.webservice.DemoService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DemoService</servlet-name>
        <url-pattern>/Service</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DemoRestService</servlet-name>
        <servlet-class>org.kartik.kbp.demo.webservice.DemoRestService</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DemoRestService</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>